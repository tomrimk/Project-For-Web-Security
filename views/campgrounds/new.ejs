<% include ../partials/header %>
<div class="container">
    
    <div class="row">
        <h1 style="text-align: center;">Pridėti naują vietą</h1>
        <br>
            <div class="well">
                <h1 class="text-center">Pagrindinė informacija</h1>
                <div style=" margin:25px auto;">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="name" placeholder="Pavadinimas">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="address" placeholder="Adresas">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="price" placeholder="Kaina" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="image" placeholder="Paveikslėlis">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="description" placeholder="Aprašymas">
                        </div>
                        <div class="form-group">
                            <button style="width: 250px;" class="btn btn-lg btn-primary btn-block center-block">Patvirtinti</button>
                        </div>
                    </form>
                    <a href="/campgrounds">Grįžti</a>
                </div>
            </div>
    </div>
</div>

<% include ../partials/footer %>